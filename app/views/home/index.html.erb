
<table class="table table-striped table-condensed">
	<thead>
		<tr> 
		<th></th>
		 <% Company.all.each do |c| %>
		
		<th style="text-align:center"colspan="<%= c.types.count %>"><h3><%=c.company_name%></h3></th>
		<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>Size/Brand</td>
			<% Type.all.each do |t| %>
				<td><%=t.type_name%> </td>
			<% end %>
		</tr>


		<% Size.all.each do |s| %>
			<tr>
				<td><%= s.size %></td> 
				<% Type.all.each do |type| %>
				<td><%= s.types.where(:type_name => "#{type.type_name}").count %></td>
				<% end %>
			</tr>
	 	<% end %>
		
	</tbody>

</table>
