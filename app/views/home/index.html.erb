
<table class="table table-striped table-condensed">
	<thead>
		<tr> 
		<th></th>
	 
		<% @c1 = Company.first %>
		<th style="text-align:center" ><h3><%=@c1.company_name%></h3></th>
	 
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>Size/Brand</td>
			<% Type.find_all_by_company_id(@c1.id).each do |t| %>
				<td><%=t.type_name%> </td>
			<% end %>
		</tr>


		<% Size.find_all_by_company_id(@c1.id).each do |s| %>
			<tr>
				<td><%= s.size %></td> 
				<% Type.find_all_by_company_id(@c1.id).each do |type| %>
				<td><%= s.types.where(:type_name => "#{type.type_name}").count %></td>
